.deepseek-loading-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(255,255,255,0.85);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.deepseek-loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.deepseek-logo-spin {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 18rpx;
  animation: bounce-scale 1.2s infinite cubic-bezier(.68,-0.55,.27,1.55);
}
.loading-text {
  color: #3B82F6;
  font-size: 28rpx;
  margin-top: 10rpx;
  letter-spacing: 2rpx;
}
@keyframes bounce-scale {
  0%   { transform: translateY(0) scale(1);}
  20%  { transform: translateY(-10rpx) scale(1.08);}
  40%  { transform: translateY(-18rpx) scale(0.95);}
  60%  { transform: translateY(-10rpx) scale(1.08);}
  80%  { transform: translateY(0) scale(1);}
  100% { transform: translateY(0) scale(1);}
} 