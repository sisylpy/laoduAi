
/* overlay 背景 */
.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 12000;
}

.popup {
  width: 90%;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.3);
  position: absolute; /* 使用绝对定位 */
  top: 30%; /* 使弹出窗口距离顶部30% */
  left: 50%;
  transform: translate(-50%, 0); /* 水平居中 */
}

/* 其余样式保持不变 */


/* 弹出窗口顶部 */
.popup-header {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-bottom: 1rpx solid #ddd;
  text-align: center;
}

.product-name {
  font-size: 42rpx;
  font-weight: 500;
  color: #333;
}

/* 弹出窗口主体 */
