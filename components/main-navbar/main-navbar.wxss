.custom-navbar {
  position: fixed; /* 固定定位 */
  top: 0;
  left: 0;
  width: 100%;
  background-color: #039671;
  border-bottom: 1px solid #e0e0e0;
  color: #fff;
  z-index: 999; /* 确保导航栏位于最上层 */
}

.nav-container {
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}
.icon{
  width: 40rpx;
  height: 40rpx;
}
.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 20rpx;
  border: 1px solid rgb(233, 233, 233);
}

.nav-left, .nav-right {
  /* display: flex; */
  /* align-items: center; */
  margin-right: 20rpx;
}

.nav-title {
  flex: 1;
  /* text-align: center; */
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
}

.nav-button {
  background-color: transparent;
  border: none;
  font-size: 32rpx;
  padding: 0 20rpx;
}



