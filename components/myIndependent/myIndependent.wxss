.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  /* background: #000; */
  /* opacity: 0.5; */
  overflow: hidden;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 999999999;
  color: #fff;
  
 }
 .modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 30%;
  left: 0;
  z-index: 999999;
  background: #f9f9f9;
  opacity: 1;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
 }
 .modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
 }
 .modal-content {
  padding: 50rpx 40rpx;

 }