.popup-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 10000;
}

.popup-content {
  background: white;
  border-radius: 8px;
  padding: 20rpx;
  width: 80%;
  max-width: 400px;
}

.popup-title {
  font-size: 38rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
  padding: 40rpx 0 ;
  
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.cancel-button,
.confirm-button {
  font-size: 38rpx;
  /* margin: 0 5rpx; */
  padding: 10rpx;
  background: #f0f0f0;
  border: none;
  border-radius: 5px;
  text-align: center;
}

.half-row{
  width: 35%;

}
.confirm-button {
  background: #ff4d4f; /* 红色，代表删除 */
  color: white;
}



.flex-row {
  flex-direction: row;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center; 
}

.flex{
  display: flex;
}
.flex-column {
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.justify-center {
  justify-content: center;
}

.align-center {
  align-items: center;
}
.flex-column-center {
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around;
  align-items: center;
}
