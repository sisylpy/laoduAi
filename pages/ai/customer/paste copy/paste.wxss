.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  box-shadow: 0 -4rpx 24rpx rgba(0,0,0,0.10);
  height: 180rpx;
  padding: 0;
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
}

.bottom-btn {
  flex: 1;
  margin: 0 8rpx;
  background: #00c48c;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.10);
  padding: 0;
  height: 80rpx;
  line-height: 80rpx;
  border: none;
  font-weight: 500;
  letter-spacing: 2rpx;
  transition: background 0.2s, color 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-btn.main {
  background: #0091FF;
}

.bottom-btn:active {
  background: #009e6d;
}

.middle-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 32rpx 0 16rpx 0;
}

.middle-btn {
  flex: 1;
  margin: 0 16rpx;
  background: #fff;
  color: #00c48c;
  font-size: 30rpx;
  border-radius: 40rpx;
  border: 2rpx solid #00c48c;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
  padding: 18rpx 0;
  transition: background 0.2s, color 0.2s;
}

.middle-btn.main {
  background: #00c48c;
  color: #fff;
  border: none;
}

.middle-btn:active {
  background: #009e6d;
  color: #fff;
}

