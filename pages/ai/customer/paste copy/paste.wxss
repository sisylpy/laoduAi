.circle-btn-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pulse-ring {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 140rpx;   /* 比按钮略大 */
  height: 140rpx;
  margin-left: -70rpx;
  margin-top: -70rpx;
  border-radius: 50%;
  background: rgba(92,36,117,0.15);
  animation: pulse 1.2s infinite;
  pointer-events: none; /* 关键：不拦截点击 */
  z-index: 1;
}
@keyframes pulse-breath {
  0%   { transform: scale(1); opacity: 0.7; }
  50%  { transform: scale(1.15); opacity: 0.25; }
  100% { transform: scale(1); opacity: 0.7; }
}
.circle-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #eee;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.10);
}

.circle-btn.orange { background: #FF9800; }
.circle-btn.green  { background: #4CAF50; }
.circle-btn.yellow { background: #FFD600; }
.circle-btn.red    { background: #F44336; }
.circle-btn.blue    { background: #009e6d; }

.circle-btn.white    { background: #ffffff; border: 1px solid gray; }
